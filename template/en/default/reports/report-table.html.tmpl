      elLiner.value = '<a href="[% urlbase FILTER js %]&amp;[% row_field FILTER uri FILTER js %]='
                          + bz_encode(elLiner.data.row_title, 1)
                          + '[% "&amp;" _ col_vals IF col_vals %]">' + elLiner.value + '</a>';

    elLiner.cell.ancestor().addClass("ttotal");
  };
//To confirm
